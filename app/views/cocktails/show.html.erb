<div class="main-container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @doses.each do |dose| %>
      <li>
        <%= dose.description %> of <%= dose.ingredient.name.downcase %> | <%= link_to 'delete', dose_path(dose), method: :delete %>
      </li>
    <% end %>
  </ul>
<br>
  <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail), class:"btn button" %>
  <br>
  <br>
  <%= link_to 'Go back', cocktails_path, class:"btn button" %>
</div>
