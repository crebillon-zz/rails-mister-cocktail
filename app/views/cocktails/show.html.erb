<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @doses.each do |dose| %>
      <li>
        <%= dose.description %> of <%= dose.ingredient.name.downcase %> | <%= link_to 'delete', dose_path(dose), method: :delete %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'add ingredient', new_cocktail_dose_path(@cocktail) %>
  <br>
  <%= link_to 'back to list', cocktails_path %>
</div>
